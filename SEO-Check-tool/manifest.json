{
  "manifest_version": 3,
  "name": "SEO Checker for Elghazawy Admin",
  "version": "1.0",
  "description": "تحقق من SEO للصفحات في admin.elghazawy.com",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://admin.elghazawy.com/*"],
  "content_scripts": [
    {
      "matches": ["https://admin.elghazawy.com/admin/item2/*/edit*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "SEO Checker"
  },
  "icons": {}
}
